---
interface Props {
    title: string;
    content: string;
    technologies: string[];
}

const { title, content, technologies } = Astro.props;
---

<div class="terminal-card">
    <header>{title}</header>
    <div class="card-content">
        <p>{content}</p>
        <div class="tech-tags">
            {technologies.map(tech => (
                <span class="terminal-badge">{tech}</span>
            ))}
        </div>
    </div>
</div>

<style>
    .terminal-card {
        width: 100%;
        height: 100%;
        display: flex;
        flex-direction: column;
    }

    .card-content {
        padding: 1rem;
        display: flex;
        flex-direction: column;
        flex: 1;
        /* Dodajemy minimalna wysokosc dla lepszego wygladu */
        min-height: 150px;
    }

    .content-text {
        flex: 1;
        margin: 0;
    }

    .tech-tags {
        margin-top: auto; /* Przesuwa tagi na dół */
        display: flex;
        flex-wrap: wrap;
        gap: 0.3rem;
    }

    .terminal-badge {
        padding: 0.1rem 0.3rem;
        background-color: #1a95e0;
        border-radius: 3px;
        font-size: 0.7rem;
    }
</style>