---
import "../styles/styles.css";
import DefaultLayout from "../layouts/DefaultLayout.astro";
---

<DefaultLayout>
  <div class="terminal-hero">
    <div class="terminal-bar">
      <span class="dot red"></span>
      <span class="dot yellow"></span>
      <span class="dot green"></span>
      <span class="terminal-title">miroslaw@portfolio:~</span>
    </div>
    <div class="terminal-body">
      <pre>
<span class="prompt">$</span> whoami
<span class="output">MirosÅ‚aw Wierzbicki</span>
<span class="prompt">$</span> echo "ðŸš§ Site under construction ðŸš§"
<span class="output">ðŸš§ Site under construction ðŸš§</span>
<span class="prompt">$</span> # You can check out my <a href="/projects" class="terminal-link">projects</a>, <a href="https://github.com/miwierzbicki" target="_blank" rel="noopener" class="terminal-link">GitHub</a> or <a href="https://www.linkedin.com/in/miros%C5%82aw-wierzbicki-67b87a230/" target="_blank" rel="noopener" class="terminal-link">LinkedIn</a>
