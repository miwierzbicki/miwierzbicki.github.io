---
interface Props {
    title: string;
    content: string;
    technologies: string[];
    href: string;
}

const { title, content, technologies, href } = Astro.props;
---
<a href={href} class="card-link">
<div class="terminal-card">
    <header>{title}</header>
    <div class="card-content">
        <p>{content}</p>
        <div class="tech-tags">
            {technologies.map(tech => (
                <span class="btn btn-default btn-ghost">{tech}</span>
            ))}
        </div>
        
    </div>
</div>
</a>
<style>
    .card-link {
        display: block;
        text-decoration: none;
        color: inherit;
        transition: transform 0.3s ease;
    }

    .card-link:hover {
        transform: translateY(5px);
    }
    
    /* Możesz też dodać dodatkowe efekty, jak cień */
    .terminal-card {
        transition: box-shadow 0.3s ease;
    }
    
   

    .card-link:hover { 
        background-color: inherit;
    }

    #link-btn { 
        margin-top: auto; /* Przesuwa tagi na dół */
        display: flex;
        flex-wrap: wrap;
        gap: 0.3rem;
    }

    .terminal-card {
        width: 100%;
        height: 100%;
        display: flex;
        flex-direction: column;
    }

    .card-content {
        padding: 1rem;
        display: flex;
        flex-direction: column;
        flex: 1;
        /* Dodajemy minimalna wysokosc dla lepszego wygladu */
        min-height: 150px;
    }

    .content-text {
        flex: 1;
        margin: 0;
    }

    .tech-tags {
        margin-top: auto; /* Przesuwa tagi na dół */
        display: flex;
        flex-wrap: wrap;
        gap: 0.3rem;
    }

    .btn { 
        font-size: 0.7rem;
        padding: 0.4rem;
        min-width: 30px;
    }

    .btn:hover { 
        cursor: auto;
    }

    .terminal-badge {
        padding: 0.1rem 0.3rem;
        background-color: var(--primary-color);
        color: #222225;
        /* border-radius: 3px; */
        font-size: 0.7rem;
    }
</style>